<Window x:Class="Sketcher3D.ShapeInputDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sketcher3D"
        mc:Ignorable="d"
        Title="ShapeInputDlg" Height="250" Width="300">
    <Grid>
        <Label Content="Name: " Margin="70,50,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox Name="name" HorizontalAlignment="Left" Margin="150,55,0,0" TextWrapping="Wrap" Text="Default" VerticalAlignment="Top" Width="120"/>

        <Label  Content="Length: " Margin="70,75,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox Name="len" HorizontalAlignment="Left" Margin="150,80,0,0" TextWrapping="Wrap" Text="Default" VerticalAlignment="Top" Width="120"/>

        <Label Content="Width: " Margin="70,100,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox Name="wid" HorizontalAlignment="Left" Margin="150,105,0,0" TextWrapping="Wrap" Text="Default" VerticalAlignment="Top" Width="120"/>

        <Label Content="Height: " Margin="70,125,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox Name="ht" HorizontalAlignment="Left" Margin="150,130,0,0" TextWrapping="Wrap" Text="Default" VerticalAlignment="Top" Width="120"/>

        <Button Name="OkButton" Content=" Ok " HorizontalAlignment="Left" Margin="100,160,0,0" VerticalAlignment="Top" Click="OkButton_Cuboid_Click"/>
        
        
        <Button Name="CancelButton" Content=" Cancel " HorizontalAlignment="Left" Margin="200,160,0,0" VerticalAlignment="Top" Click="CancelButton_Click"/>
    </Grid>
</Window>
