<Window x:Class="Sketcher3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sketcher3D"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition />
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Menu>
                <MenuItem Header="File" FontSize="16">
                    <MenuItem Name="SaveSkt" Header="Save(.skt)" FontSize="14" Click="SaveSkt_Click"/>
                    <MenuItem Name="SaveGNU" Header="SaveGNU(.dat)" FontSize="14" Click="SaveGNU_Click"/>
                    <MenuItem Name="LoadSTL" Header="LoadSTL" FontSize="14" Click="LoadSTL_Click"/>
                </MenuItem>
                <MenuItem Header="Edit" FontSize="16">
                    <MenuItem Name="Clear" Header="Clear" FontSize="14" Click="Clear_Click"/>
                </MenuItem>
                <MenuItem Header="Transformations" FontSize="16">
                    <MenuItem Name="Translate" Header="Translate" FontSize="14" Click="Translate_Click"/>
                </MenuItem>
            </Menu>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Menu>
                    <Button Name="Cuboid" Content="Cuboid" FontSize="18" Width="70" Height="30" Margin="4" Click="Cuboid_Click" />
                    <Button Name="Cube" Content="Cube" FontSize="18" Width="70" Height="30" Margin="4" Click="Cube_Click"/>
                    <Button Name="Cone" Content="Cone" FontSize="18" Width="70" Height="30" Margin="4" Click="Cone_Click"/>
                    <Button Name="Sphere" Content="Sphere" FontSize="18" Width="70" Height="30" Margin="4" Click="Sphere_Click"/>
                    <Button Name="Cylinder" Content="Cylinder" FontSize="18" Width="70" Height="30" Margin="4" Click="Cylinder_Click"/>
                    <Button Name="Pyramid" Content="Pyramid" FontSize="18" Width="70" Height="30" Margin="4" Click="Pyramid_Click"/>
                </Menu>
            </Grid>
        </Grid>

        <!-- 3D VIEWPORT -->
        <Viewport3D x:Name="MainViewport"
            Grid.Row="1"
            ClipToBounds="True"
            MouseDown="MainViewport_PreviewMouseDown"
            MouseMove="MainViewport_PreviewMouseMove"
            MouseUp="MainViewport_PreviewMouseUp"
            MouseWheel="MainViewport_MouseWheel"/>

    </Grid>
</Window>
