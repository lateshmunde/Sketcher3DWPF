<Window x:Class="Sketcher3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sketcher3D"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Name="tbStatus" FontSize="75" VerticalAlignment="Top" HorizontalAlignment="Center" />

        <Button Name="btnToggleRun" Width="100" Height="50" 
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Content="Run" FontSize="30" Click="btnToggleRun_Click"/>
    </Grid>
</Window>
